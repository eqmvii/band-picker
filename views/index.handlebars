 {{#if user}}
<h1 style="color: black">Welcome, {{user.username}}!</h1>
<p>
  <a href="/profile">View Your Profile</a>
</p>
<p>
  <a href="/logout">Log Out</a>
</p>
{{else}}
<h3 style="color: red">You are not logged in</h3>
<a href="/login">Log In</a>
{{/if}}

<hr />
<h2>Bands:</h2>

{{#each bands}}
<p>
  <!-- <strong>ID: </strong> {{this.id}} | -->
  <strong>Name: </strong>{{this.name}} |
  <strong>Stage: </strong>{{this.stage}} |
  <strong>Day: </strong> {{this.day}} |
  <strong>Time: </strong> {{this.time}}
  <hr /> {{/each}}

  <form action="/api/bands" method="POST">
    <h3>Add a band</h3>
    <p>name:
      <input type="text" name="name"></input>
    </p>
    <p>stage:
      <select name="stage">
        <option value="What">What</option>
        <option value="Which">Which</option>
        <option value="The Other">The Other</option>
        <option value="This">This</option>
        <option value="That">This</option>
      </select>
      <p>day:
        <select name="day">
          <option value="Thursday">Thursday</option>
          <option value="Friday">Friday</option>
          <option value="Saturday">Saturday</option>
          <option value="Sunday">Sunday</option>
        </select>
      </p>
      <p>time:
        H: <input type="number" step="1" min="1" max="24" value="4" name="hours"> | M: <input type="number" step="15" min="0" max="60" value="0" name="minutes">
      </p>
      <button type="submit">Submit</button>
  </form>

  </hr / >
  <h2>Users:</h2>

  {{#each users}}
  <p>
    <!-- <strong>ID: </strong> {{this.id}} | -->
    <strong>User: </strong>{{this.username}} |
    <strong>password: </strong>{{this.password}} |
    <strong>Created: </strong> {{this.createdAt}}
    <button id="{{this.id}}" data-js="{{this.id}}" class="js-delete-one-user">Delete</button>
    <button id="edit-button-{{thid.id}}" class="js-edit-button" data-js="{{this.id}}">Edit</button>
  </p>
  <p id="edit-form-{{this.id}}" class="edit-form">
    Edit Username:
    <input id="edit-username-{{this.id}}" type="text" name="username" value="{{this.username}}"></input>
    Edit Password:
    <input id="edit-password-{{this.id}}" type="text" name="password" value="{{this.password}}"></input>
    <button id="update{{this.id}}" data-js="{{this.id}}" class="js-update-one-user">Update</button>
  </p>

  <hr /> {{/each}}



  <form action="/api/users" method="POST">
    <h3>Add a user</h3>
    <p>username:
      <input type="text" name="username"></input>
    </p>
    <p>Password:
      <input type="text" name="password"></input>
    </p>
    <button type="submit">Submit</button>
  </form>


  <script src="js/app.js" type="text/javascript"></script>
