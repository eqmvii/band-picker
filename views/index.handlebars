  <h2>Add a band</h2>
  <hr />


  <form action="/api/bands" method="POST" class="ui form">

    <div class="field five wide">
      <label>Band Name</label>
      <input type="text" name="name" class="ui input" placeholder="slayer"></input>
    </div>

    <div class="field five wide">
      <label>Stage</label>
      <select name="stage" class="ui dropdown select">
        <option value="What">What Stage</option>
        <option value="Which">Which Stage</option>
        <option value="The Other">The Other</option>
        <option value="This">This Tent</option>
        <option value="That">That Tent</option>
      </select>
    </div>

    <div class="field five wide">
      <label>Day</label>
      <select name="day" class="ui dropdown select">
        <option value="Thursday">Thursday</option>
        <option value="Friday">Friday</option>
        <option value="Saturday">Saturday</option>
        <option value="Sunday">Sunday</option>
      </select>
    </div>

    <div class="inline fields">

      <div class="two wide field">
        <label>Hours: </label>
        <input class="ui input" type="number" step="1" min="1" max="24" value="4" name="hours">
      </div>

      <div class="two wide field">
        <label>Minutes: </label>
        <input class="ui input" type="number" step="15" min="0" max="60" value="0" name="minutes">
      </div>

    </div>

    <button class="ui primary animated button" tabindex="0" type="submit">
      <div class="visible content">Add Band</div>
      <div class="hidden content">
        <i class="music icon"></i>
      </div>
    </button>

  </form>

  <hr />
  <br />

  <div class="ui link cards">
    {{#each bands}}

    <div class="ui card">
      <div class="content">
        <div class="header">{{this.name}}
          <i class="music icon"></i>
        </div>
      </div>
      <div class="content">
        <h4 class="ui sub header">Details</h4>
        <div class="ui small feed">

          <div class="event">
            <div class="content">
              <div class="summary">
                {{this.stage}} {{this.day}} {{this.time}}
              </div>
            </div>
          </div>

          <div class="event">
            <div class="content">
              <div class="summary">
                <img id="band-{{this.name}}" data-js-name="{{this.name}}" src="" class="js-band-image"></img>
              </div>
            </div>
          </div>

          <div class="event">
            <div class="content">
              <div class="summary">
                <div class="ui star rating" data-rating="{{randomStars}}"></div>
              </div>
            </div>
          </div>

        </div>
      </div>
      <div class="extra content">
        <button id="delete-band-{{this.id}}" data-js="{{this.id}}" class="ui button red small js-delete-one-band">
          <i class="icon trash"></i> Remove Band</button>
      </div>
    </div>
    {{/each}}
  </div>

  <hr />

  <br />

  <h2>Users:</h2>

  {{#each users}}
  <p>
    <!-- <strong>ID: </strong> {{this.id}} | -->
    <strong>User: </strong>{{this.username}} |
    <strong>password: </strong>{{this.password}} |
    <strong>Created: </strong> {{this.createdAt}}
    <button id="{{this.id}}" data-js="{{this.id}}" class="js-delete-one-user">Delete</button>
    <button id="edit-button-{{thid.id}}" class="js-edit-button" data-js="{{this.id}}">Edit</button>
  </p>
  <p id="edit-form-{{this.id}}" class="edit-form">
    Edit Username:
    <input id="edit-username-{{this.id}}" type="text" name="username" value="{{this.username}}"></input>
    Edit Password:
    <input id="edit-password-{{this.id}}" type="text" name="password" value="{{this.password}}"></input>
    <button id="update{{this.id}}" data-js="{{this.id}}" class="js-update-one-user">Update</button>
  </p>

  <hr /> {{/each}}



  <form action="/api/users" method="POST" class="ui form">
    <h3>Add a user</h3>

    <div class="field five wide">
      <label>Username</label>
      <input type="text" name="username" class="ui input"></input>
    </div>

    <div class="field five wide">
      <label>Username</label>
      <input type="text" name="password" class="ui input"></input>
    </div>

    <button class="ui primary button" type="submit">
      <i class="icon user"></i>
      Add User
    </button>
  </form>



  <script src="js/app.js" type="text/javascript"></script>
