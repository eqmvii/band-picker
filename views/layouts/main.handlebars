<!DOCTYPE html>
<html lang="en">

<head>
	<title>Band Picker</title>

	<!-- jQuery -->
	<script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
	 crossorigin="anonymous"></script>

	<!-- Semantic UI CSS -->
	<link rel="stylesheet" type="text/css" href="/semantic/semantic.min.css">
	<link rel="stylesheet" type="text/css" href="/semantic/components/rating.min.css"> {{#if cssLink}}
	<link rel="stylesheet" type="text/css" href="/{{cssLink}}"> {{/if}}

	<!-- Semantic UI JS -->
	<script src="/semantic/semantic.min.js"></script>
	<script src="/semantic/components/rating.min.js"></script>

	<!-- custom -->
	<link rel="stylesheet" type="text/css" href="/css/burgerEater.css">

	<!-- favicon -->
	<link rel="shortcut icon" href="favicon.ico" type="image/x-icon">
</head>

<body>

	<!-- TODO hack here and make it stackable -->
	<div class="ui menu">
		<div class="ui container">
			<a href="/" class="header item">
				{{!--
				<img class="logo" src="images/logo.png"> &nbsp;&nbsp; Band Picker --}}
				<h2 class="ui header blue">
					<i class="headphones icon"></i>
					<div class="content">
						<div class="sub header">Band Picker</div>
					</div>
				</h2>
			</a>
			<a href="/" class="item">
				<i class="home icon"></i> Home</a>
			{{#if user}}
			<a class="item" href="/profile">
				<i class="user circle icon"></i> {{user.username}}</a>
			<a class="item" href="/logout">
				<i class="window close icon"></i> Logout</a>

			{{else}}
			<a class="item" href="/register">
				<i class="user plus icon"></i> Register</a>


			<a class="item" href="/login">
				<i class="angle right icon"></i> Login</a>
			{{/if}}
			<a class="item" href="/bands">
				<i class="music icon"></i> Bands</a>
			<div class="ui simple dropdown item">
				Fake Dropdown
				<i class="dropdown icon"></i>
				<div class="menu">
					<a class="item" href="/login">Login</a>
					<a class="item" href="/bands">Bands</a>
					<div class="divider"></div>
					<div class="header">Header Item</div>
					<div class="item">
						<i class="dropdown icon"></i>
						Sub Menu
						<div class="menu">
							<a class="item" href="#">Link Item</a>
							<a class="item" href="#">Link Item</a>
						</div>
					</div>
					<a class="item" href="#">Link Item</a>
				</div>
			</div>
			<a href="/react" class="item">
				<i class="react icon"></i> React Admin</a>
		</div>
	</div>

	{{!--
	<div class="ui fluid">
		<h1 class="ui center aligned header">Band Picker</h1>
		<img src="https://s3.us-east-2.amazonaws.com/eqmvii-burgereater/arch.png" class=" ui centered medium rounded bordered image"
		/>
	</div> --}}

	<div class="landing-image">
		<span id="landing-text">Band Picker</span>
	</div>


	<div class="ui container">

		{{{ body }}}
		<br />
		<hr />
		<br />
		<h4 class="ui center aligned header">
			By
			<a href="https://github.com/eqmvii">Eric Mancini
				<i class="github icon"></i>
			</a>
		</h4>
		<br/>

	</div>

</body>

</html>
